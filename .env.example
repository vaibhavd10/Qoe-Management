# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/qoe_platform
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/qoe_platform_test

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Authentication
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# AI/LLM Configuration
OPENAI_API_KEY=your-openai-key-here
LANGCHAIN_API_KEY=your-langchain-key-here
LANGCHAIN_PROJECT=qoe-platform
LANGCHAIN_TRACING_V2=true

# File Storage
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=50MB

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-password
SMTP_FROM=no-reply@qoe-platform.com

# Application Settings
APP_NAME=QoE Automation Platform
APP_VERSION=1.0.0
ENVIRONMENT=development
LOG_LEVEL=INFO

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_HOSTS=localhost,127.0.0.1